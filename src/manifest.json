{
  "manifest_version": 2,
  "name": "Steam Sync Save Downloader",
  "version": "1.0.0",

  "description": "Generate a curl script to download all your steam save files in one go",

  "icons": {
      "16": "16.png",
      "48": "48.png",
      "128": "128.png"
  },

  "permissions": [
    "https://store.steampowered.com/account/remotestorageapp/*",
    "downloads"
  ],

  "background": {
    "scripts": ["bg.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Prepare steam save downloads",
    "default_icon": "16.png"
  }
}
